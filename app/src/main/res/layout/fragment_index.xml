<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightWhite"
    tools:context=".ui.fragment.IndexFragment">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp">

        <View
            android:layout_width="1dp"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:transitionName="mainTrans"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_flag"
            android:contentDescription="@string/flag" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/colorFontInBlue"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAN"
                android:textAllCaps="true"
                android:textColor="@color/colorFontInBlue"
                android:textSize="7sp"
                tools:ignore="SmallSp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_main_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饥了么"
                android:textColor="@color/colorBlack"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="精细粮食巧搭配，少荤多素有营养"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"/>


            <LinearLayout
                android:id="@+id/layout_main_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBgWhite"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:paddingTop="7dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="7dp"
                        android:text="牛肉火锅"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardBackgroundColor="@color/colorBgWhite"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:paddingTop="7dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="7dp"
                        android:text="饥了么"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_main_top"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/colorBgOrange"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:alpha="0.10"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="50dp"

                            android:scaleType="centerInside"
                            android:src="@drawable/icon_food_1"/>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginStart="140dp"
                            android:alpha="0.15"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_food_2"/>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="180dp"
                            android:layout_marginStart="30dp"
                            android:alpha="0.05"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_food_3"/>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="250dp"
                            android:layout_marginTop="250dp"
                            android:layout_marginStart="60dp"
                            android:alpha="0.1"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_food_4"/>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="130dp"
                            android:layout_marginStart="190dp"
                            android:alpha="0.05"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_food_5"/>

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginTop="280dp"
                            android:layout_marginStart="200dp"
                            android:alpha="0.15"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_food_6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingStart="13dp"
                                android:paddingTop="15dp"
                                android:paddingEnd="13dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:id="@+id/img_refresh"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="4dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/icon_update" />

                                <TextView
                                    android:id="@+id/text_index_show_trivia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="7dp"
                                    android:textColor="@color/colorAddLightWhite"
                                    android:text="罐头发明48年后，才有人发明了开罐器。"
                                    android:textSize="17sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                            <!--<TextView
                                android:id="@+id/trivia_enter_menu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_ripple"
                                android:ellipsize="end"
                                android:padding="20dp"
                                android:textColor="@color/colorFontWhite"
                                android:textSize="15sp"
                                />-->

                            <LinearLayout
                                android:id="@+id/trivia_enter_menu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_ripple"
                                android:ellipsize="end"
                                android:layout_marginTop="20dp"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:textSize="20sp"
                                        android:layout_marginStart="5dp"
                                        android:gravity="center"
                                        android:alpha="0.6"
                                        android:text="奶香果酱酥饼"/>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="20dp"
                                        android:layout_marginEnd="20dp"
                                        android:layout_weight="4"
                                        android:background="@null"
                                        app:cardCornerRadius="10dp"
                                        app:cardElevation="4dp"
                                        android:layout_marginTop="20dp"
                                        tools:ignore="NestedWeights">

                                        <ImageView
                                            android:id="@+id/img_pic_food"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:alpha="0.9"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/pic_food_1" />
                                    </androidx.cardview.widget.CardView>





                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:textSize="12sp"
                                    android:layout_marginTop="15dp"
                                    android:alpha="0.5"
                                    android:text="小小个的饼干中间加了一圈酸甜清新的果酱，可爱诱人，不仅酥松，而且可口，中间的果酱香甜无比。浓郁又酥松，入口即化，非常好吃！"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:textSize="30sp"
                                    android:alpha="0.3"
                                    android:gravity="center"
                                    android:text="点击进入点餐"/>

                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/colorLittleRed"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="4dp"
                                android:src="@drawable/icon_index_like"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="猜我喜欢"
                                android:textColor="@color/colorMainBlue"
                                android:textSize="13sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/colorBgWhite"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground">

                        <View
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_centerInParent="true"
                            android:transitionName="imgSearch"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="4dp"
                                android:src="@drawable/icon_index_self_service"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:text="自助厨房"
                                android:textColor="@color/colorBlack"
                                android:textSize="13sp"
                                android:textStyle="bold"/>
                        </LinearLayout>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>